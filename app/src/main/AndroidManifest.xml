        <activity android:name=".activities.WelcomeTwo" android:theme="@style/Theme.AppCompat.NoActionBar" android:configChanges="orientation" android:screenOrientation="portrait">
        </activity>

        <activity android:name=".activities.DashboardActivity" android:theme="@style/Theme.AppCompat.Translucent">
        </activity>

        <activity android:name=".activities.SettingsActivity" android:theme="@style/Theme.AppCompat.NoActionBar" android:configChanges="orientation" android:screenOrientation="portrait">
